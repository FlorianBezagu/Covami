# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import CRUD routes
*      /admin              module:crud

# Import Secure routes
*       /                                       module:secure

*		/signup                                 Signup.index

GET		/Utilisateurs/VoirProfil/{id}			Members.seeProfile

*		/Vehicules/MesVehicules					Vehicles.myVehicles
*     /MonCompte/Editer                         Members.profile
GET     /Amis/MesAmis							Members.friends
GET     /Amis/TrouverDesAmis						Members.findFriends

# Catch all
*		/{controller}/{action}                  {controller}.{action}
